@using LifeTube.Models;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title"> <h1>LifeTube</h1>
               
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
           
            <div class="nav-collapse">
				@if (Convert.ToInt16(GlobalVariables.UserId) > 0)
                {
                       
                    <ul class="nav pull-right">
							<li><p class="navbar-text">Welcome @GlobalVariables.UserName&nbsp;&nbsp;</p></li>
							<li><span class="label label-inverse navbar-text">@Html.ActionLink("Log Out", "LogOff", "Account")</span></li>
					</ul>
                }
                        
         
        <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Account", "Index", "Home")</li>
                    
                </ul>
                
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>

