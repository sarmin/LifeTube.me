@using LifeTube.Models;
<!DOCTYPE html>
<html>
<head>
<title>Life Tube</title>
<link rel="stylesheet" type="text/css" href="../../Content/css/styles.css" />
<link rel="stylesheet" type="text/css" href="../../Content/css/nivo-slider.css" />
<link rel="stylesheet" type="text/css" href="../../Content/css/fonts/fonts.css" />

<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.17/themes/redmond/jquery-ui.css" rel="Stylesheet" type="text/css"   /> 
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>

<!--[if lt IE 9]>
	<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
<!--[if gte IE 9]>
	<style type="text/css">html,body {filter:none}</style>
<![endif]-->
 <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>

<div id="wrapper">
	<div class="container">
   <br />
        <div style="">
			@if (Convert.ToInt16(GlobalVariables.UserId) > 0)
            {
                <ul class="nav pull-right">
                        <li><p class="navbar-text"> @GlobalVariables.UserName&nbsp;&nbsp;(@GlobalVariables.eMail)&nbsp;@Html.ActionLink("Log Out", "LogOff", "Account")</p></li>
				      
		        </ul>
            }
            else
            { 
               @* <li><span class="label label-inverse navbar-text">@Html.ActionLink("Log On", "LogOn", "Account")</span></li>*@
            } 
		</div>
		<div id="header">
			<div class="logo"><span class="hidden">LifeTube</span></div>
		</div>
        <div></div>

		<div class="ribbon-wrapper">
			<div class="ribbon-front">

				<ul class="top-nav">
                 
					 @if (Convert.ToInt16(GlobalVariables.UserId) > 0)
                    {
               
                        <li>@Html.ActionLink("Home", "Index", "Home")</li> 
                        <li>@Html.ActionLink("Profile", "Profile", "Profile")</li>
                        <li>@Html.ActionLink("Timeline", "", "")</li>
                        <li>@Html.ActionLink("My Circle", "MyCircle", "UserCircle")</li>   
                   
                    }
              
				</ul>
                
			</div>
			<div class="ribbon-edge-bottomleft"></div>
			<div class="ribbon-edge-bottomright"></div>
		</div>

		<div class="slider-wrapper theme-default">
			<div id="slider" class="nivoSlider">
				<a href="#"><img src="../../Content/img/slides/001.jpg" alt="img" title="#htmlcaption" data-thumb="001.jpg" /></a>
				<a href="#"><img src="../../Content/img/slides/002.jpg" alt="img" data-thumb="002.jpg" /></a>
			</div><!-- /#Slider -->
			<!-- add title="#htmlcaption" attribute to img to display -->
			@*<div id="htmlcaption" class="nivo-html-caption">
			  <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="#">a link</a>. 
			</div>*@
			
		</div><!-- /.slider-wrapper-->
   
        <div>
        
        
        </div>
	
       
            @RenderBody()
            @{ Html.RenderPartial("FacebookInit"); }
   
		<div id="footer">
			<ul class="footer-nav">
				<li><a href="#">Home</a></li>
				<li><a href="#">About LifeTube</a></li>
				<li><a href="#">Sample Videos</a></li>
				<li><a href="#">Help</a></li>
				<li><a href="#">Terms</a></li>
				<li><a href="#">Privacy</a></li>
			</ul>
			<div class="copyright">&copy; Copyright 2012 LifeTube</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="../../Content/js/nivo.slider.min.js"></script>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider();
    });
</script>

</body>
</html>