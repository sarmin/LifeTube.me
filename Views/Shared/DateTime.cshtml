@model System.DateTime ? 
       
 @Html.TextBox("MyDateTime", (Model.HasValue ? Model.Value.ToShortDateString() : string.Empty), new { @class = "pickDate" })


 <script type="text/javascript">
     $(document).ready(function () {

         $('.pickDate').datepicker({
             showOptions: { speed: 'fast' },
              changeMonth: false,
              changeYear: false,
              dateFormat: 'dd/mm/yy',
              gotoCurrent: true,
         });
     });
  </script>
  